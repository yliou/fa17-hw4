<br> Todo table </br>
<table>                         
  <tr>                          
    <th>Tasks</th>
    <th>Finished</th>
  </tr>
<% @data.each do |data| %>       
  <tr>
    <td><%= data.tasks %></td>  
    <td><%= data.finished %></td>  
  </tr>
<% end %>                        
</table> 
<br> Cat table </br> 
<table>                         
  <tr>                          
    <th>Name</th>
  </tr>
<% @data1.each do |data| %>       
  <tr>
    <td><%= data.name %></td>  
  </tr>
<% end %>                        
</table> 
<br> User table </br> 
<table>                         
  <tr>                          
    <th>Username</th>
    <th>email</th>
    <th>age</th>
  </tr>
<% @data2.each do |data| %>       
  <tr>
    <td><%= data.username %></td>  
    <td><%= data.email %></td>  
    <td><%= data.age %></td>  
  </tr>
<% end %>                        
</table> 
<%= form_for @person, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :tasks %>
  <%= f.text_field :finished %>

  <%= f.submit "Add Todo" %>
<% end %>